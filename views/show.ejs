<% layout("layouts/boilerplate") %>
<script>
    const MapTok = "<%= process.env.MAP_TOKEN %>";
    const listing = <%- JSON.stringify(listing) %>; 
</script>
    <div class="row mt-3">
        <div class="col-8 offset-2">
        <h2><b><%= listing.title %></b></h2>
        </div>
    <div class="card col-6 offset-2">
        <img 
        src="<%= listing.image.url %>" 
        class="card-img-top show-img" 
        alt="list-img">
        <div class="card-body">
            <p class="card-text mt-3"> 
                <b><i> Owned by : <%= listing.owner.username %></i></b><br>
                Description : <%= listing.description %>  <br>
                Price : &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                Location : <%= listing.location %> <br>
                Country : <%= listing.country %> <br>
                Category : <%= listing.category %> <br>
            </p>
        </div>
    </div>
       
        <% if (CurrUser) { %>
    <div class="d-flex gap-2 mb-5 offset-2">
        <% if (listing.owner._id.equals(CurrUser._id)) { %>
            <!-- Owner sees Edit/Delete -->
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger">Edit</a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark">Delete</button>
            </form>
        <% } else { %>
            <!-- Non-owner sees Book Now -->
            <a href="/listings/<%= listing._id %>/booking" class="btn btn-primary">Book Now</a>
        <% } %>
    </div>
<% } %>
<hr>

         <!-- -------------------------------------------->

        <!-- REVIEW CREATION -->
        <div class="col-10  mb-3">
            <h4>Leave a Review :</h4>
                <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
                <div class="mt-3 mb-3">
                <label for="rating" class="form-label">Rating :</label>
                <fieldset class="starability-slot">
  <input type="radio" name="review[rating]" id="no-rate" class="input-no-rate" value="1" checked aria-label="No rating">
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
                </div>
                <div class="mt-3 mb-2">
                    <label for="comments" 
                    class="form-label">Comments :</label>
                    <textarea name="review[comment]" 
                    id="comment" 
                    cols="20" 
                    rows="5" 
                    class="form-control" required></textarea>
                    <div class="invalid-feedback">Please write a comment to submit!</div>
                </div>
                <div class="col-8 mt-3">
                    <button class="btn btn-dark">Submit</button>
                </div>
                </form>
            </h5>
        </div>
         <!-- --------------------------------------------> 


        <!-- REVIEWS SHOWING -->
        <% if(listing.reviews.length > 0 ){ %>
        <h6 class="mb-3"><b>All Reviews : </b></h6>
        <div class="row">
        <% for(review of listing.reviews){ %>
            <div class="card col-5 ms-3 mb-3">
                <div class="card-body review-card mt-2">
                    <div class="card-margin">
                    <h5 class="card-title">@<%= review.author.username %></h5>
                    <br>
                    <p class="starability-result card-text mb-3" data-rating=<%= review.rating %>></p>
                    <p class="card-text mb-3"><%= review.comment %></p>
                    </div>
                    <% if(CurrUser && review.author._id.equals(CurrUser._id)) { %>
                    <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3 deletebtn">
                        <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
        <% } %> 
        </div>  
        <% } %>
        <!-- ------------------------------------------ -->

        <!-- MAP SHOWING  -->
        <div class="col-8 offset-1 mb-3 mt-3">
            <h3>Where youll be : </h3>
            <div class="mt-3" id="map"></div>
        </div>
    </div>
    
    <script src="/js/map.js"></script>
   
